# build the binary
ARG GO_VERSION
ARG IMAGE_REPO
FROM golang:${GO_VERSION:-1.13.8} AS builder
# bring in all the packages
# COPY main.go /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/
# COPY go.mod /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/
# COPY go.sum /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/
# COPY internal /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/internal/
COPY . /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/
WORKDIR /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/

# tests currently don't work because mocking rabbit is interesting
RUN GO111MODULE=on go test ./...
# compile
RUN CGO_ENABLED=0  GOOS=linux GOARCH=amd64 go build -a -o backup-handler .

# put the binary into container
# use the commons image to get entrypoints
FROM ${IMAGE_REPO:-lagoobernetes}/commons

WORKDIR /app/

# bring the auto-idler binary from the builder
COPY --from=builder /go/src/github.com/amazeeio/lagoobernetes/services/backup-handler/backup-handler .

ENV LAGOOBERNETES=backup-handler
# set defaults
ENV JWT_SECRET=super-secret-string \
    JWT_AUDIENCE=api.dev \
    GRAPHQL_ENDPOINT="http://api:3000/graphql" \
    RABBITMQ_ADDRESS=broker \
    RABBITMQ_PORT=5672 \
    RABBITMQ_USERNAME=guest \
    RABBITMQ_PASSWORD=guest \
    HTTP_LISTEN_PORT=3000

ENTRYPOINT ["/sbin/tini", "--", "/lagoobernetes/entrypoints.sh"]
CMD ["/app/backup-handler"]
