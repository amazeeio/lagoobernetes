ARG IMAGE_REPO
FROM ${IMAGE_REPO:-amazeeio}/node:10-builder as builder
COPY package.json yarn.lock /app/
RUN yarn install

FROM ${IMAGE_REPO:-amazeeio}/node:10
COPY --from=builder /app/node_modules /app/node_modules
COPY . /app/

ARG LAGOOBERNETES_GIT_SHA=0000000000000000000000000000000000000000
ENV LAGOOBERNETES_GIT_SHA_BUILDTIME ${LAGOOBERNETES_GIT_SHA}

ARG LAGOOBERNETES_GIT_BRANCH=undefined
ENV LAGOOBERNETES_GIT_BRANCH_BUILDTIME ${LAGOOBERNETES_GIT_BRANCH}

ARG LAGOOBERNETES_API_VARIABLE_PROJECT
ENV LAGOOBERNETES_API_VARIABLE_PROJECT_BUILDTIME ${LAGOOBERNETES_API_VARIABLE_PROJECT}

ARG LAGOOBERNETES_API_VARIABLE_ENVIRONMENT
ENV LAGOOBERNETES_API_VARIABLE_ENVIRONMENT_BUILDTIME ${LAGOOBERNETES_API_VARIABLE_ENVIRONMENT}

ARG LAGOOBERNETES_API_VARIABLE_OVERRIDE
ENV LAGOOBERNETES_API_VARIABLE_OVERRIDE_BUILDTIME ${LAGOOBERNETES_API_VARIABLE_OVERRIDE}

ARG LAGOOBERNETES_API_VARIABLE_BUILD
ENV LAGOOBERNETES_API_VARIABLE_BUILD_BUILDTIME ${LAGOOBERNETES_API_VARIABLE_BUILD}

ARG LAGOOBERNETES_API_VARIABLE_RUNTIME
ENV LAGOOBERNETES_API_VARIABLE_RUNTIME_BUILDTIME ${LAGOOBERNETES_API_VARIABLE_RUNTIME}

EXPOSE 3000

CMD ["yarn", "run", "start"]
