ARG IMAGE_REPO
FROM ${IMAGE_REPO:-amazeeio}/node:10-builder as builder
COPY package.json yarn.lock /app/
RUN yarn install

FROM ${IMAGE_REPO:-amazeeio}/node:10
COPY --from=builder /app/node_modules /app/node_modules
COPY . /app/

ARG LAGOOBERNETES_GIT_SHA=0000000000000000000000000000000000000000
ENV LAGOOBERNETES_GIT_SHA_BUILDTIME ${LAGOOBERNETES_GIT_SHA}

ARG LAGOOBERNETES_GIT_BRANCH=undefined
ENV LAGOOBERNETES_GIT_BRANCH_BUILDTIME ${LAGOOBERNETES_GIT_BRANCH}

ARG LAGOOBERNETES_BUILD_TYPE=undefined
ENV LAGOOBERNETES_BUILD_TYPE_BUILDTIME ${LAGOOBERNETES_BUILD_TYPE}

ARG LAGOOBERNETES_PR_HEAD_BRANCH=undefined
ENV LAGOOBERNETES_PR_HEAD_BRANCH_BUILDTIME ${LAGOOBERNETES_PR_HEAD_BRANCH}

ARG LAGOOBERNETES_PR_HEAD_SHA=undefined
ENV LAGOOBERNETES_PR_HEAD_SHA_BUILDTIME ${LAGOOBERNETES_PR_HEAD_SHA}

ARG LAGOOBERNETES_PR_BASE_BRANCH=undefined
ENV LAGOOBERNETES_PR_BASE_BRANCH_BUILDTIME ${LAGOOBERNETES_PR_BASE_BRANCH}

ARG LAGOOBERNETES_PR_BASE_SHA=undefined
ENV LAGOOBERNETES_PR_BASE_SHA_BUILDTIME ${LAGOOBERNETES_PR_BASE_SHA}

ARG LAGOOBERNETES_PR_TITLE=undefined
ENV LAGOOBERNETES_PR_TITLE_BUILDTIME ${LAGOOBERNETES_PR_TITLE}

EXPOSE 3000

CMD ["node", "index.js"]
